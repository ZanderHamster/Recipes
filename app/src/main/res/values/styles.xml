<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleMarginStart">0dp</item>
        <item name="navigationIcon">@drawable/ic_menu_black_24dp</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarStyleArrow" parent="Widget.AppCompat.Toolbar">
        <item name="titleMarginStart">0dp</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>
