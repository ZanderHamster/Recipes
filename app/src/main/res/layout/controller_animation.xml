<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_animation"
        style="@style/ToolbarStyleArrow"
        app:title="@string/animation" />

    <ImageView
        android:id="@+id/animation_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_animation"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/sun" />

    <Button
        android:id="@+id/animation_start_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:text="@string/start_animation" />

</RelativeLayout>